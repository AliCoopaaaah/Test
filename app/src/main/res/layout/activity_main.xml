<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include layout="@layout/toolbar"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/datePicked"
                android:text="YEAR-MONTH-DAY"
                android:textColor="@color/gray"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_marginTop="75dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <Button
                android:id="@+id/dateButton"
                android:text="Pick a Date"
                android:textSize="18dp"
                android:backgroundTint="@color/black"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/datePicked"/>
            <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/blue"
                app:layout_constraintTop_toBottomOf="@id/dateButton">

                <Button
                    android:id="@+id/show"
                    android:text="Show Image"
                    android:textSize="18dp"
                    android:backgroundTint="@color/blue"
                    android:layout_marginLeft="52dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:cornerRadius="0dp"/>
                <Button
                    android:id="@+id/save"
                    android:text="Save URL"
                    android:textSize="18dp"
                    android:backgroundTint="@color/blue"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:cornerRadius="0dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/imagecontainer"
                android:background="@drawable/space"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:layout_constraintTop_toBottomOf="@id/container">
                <LinearLayout
                    android:id="@+id/imagecontainercontainer"
                    android:background="@color/black"
                    android:layout_gravity="center"
                    android:layout_width="300dp"
                    android:layout_height="250dp">
                    <ImageView
                        android:id="@+id/image"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/viewFavourites"
                android:text="Saved Images"
                android:textSize="18dp"
                android:backgroundTint="@color/black"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imagecontainer"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:id="@+id/help"
        android:text="@string/question_mark"
        android:textStyle="bold"
        android:textSize="37dp"
        android:backgroundTint="@color/lightblue"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:layout_width="65dp"
        android:layout_height="70dp"
        app:cornerRadius="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>